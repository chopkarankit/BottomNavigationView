<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/man4"
    tools:context=".GoLiveScreen">

    <ImageView
        android:id="@+id/gls1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_close"
        app:tint="#ffffff"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/cle"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp">
    </ImageView>

    <LinearLayout
        android:id="@+id/gls2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_below="@id/gls1">

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="0dp"
            app:cardCornerRadius="18dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#FFFA5C7A"
            android:layout_marginHorizontal="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/man4"
                android:scaleType="centerCrop">
            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/priya_deshmukh"
                android:textColor="#ffffff"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="50dp">
            </TextView>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_per"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="50dp"
                android:contentDescription="@string/act">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/_0fd"
                android:textColor="#ffffff"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="75dp"
                android:layout_marginStart="75dp">
            </TextView>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="30dp"
        android:layout_below="@id/gls1"
        android:layout_toRightOf="@id/gls2"
        android:layout_toEndOf="@id/gls2"
        app:cardBackgroundColor="#FFFA5C7A">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/user"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="7dp"
            app:tint="#ffffff"
            android:contentDescription="@string/todous">
        </ImageView>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp">

        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="30dp"
            android:layout_marginHorizontal="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_threeline"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/todokhy">
            </ImageView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="30dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_text"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/todokhy">
            </ImageView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="30dp"
            android:layout_marginHorizontal="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_crop"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/todokhy">
            </ImageView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="30dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/network"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/todokhy">
            </ImageView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="30dp"
            android:layout_marginHorizontal="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_desktop"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/todokhy">
            </ImageView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


   <androidx.cardview.widget.CardView
       android:layout_width="35dp"
       android:layout_height="35dp"
       app:cardCornerRadius="30dp"
       android:layout_alignParentRight="true"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="50dp"
       android:layout_marginRight="20dp"
       android:layout_alignParentEnd="true"
       android:layout_marginEnd="20dp">

       <ImageView
           android:layout_width="25dp"
           android:layout_height="25dp"
           android:src="@drawable/ic_gift"
           android:layout_marginLeft="5dp"
           android:layout_marginTop="5dp"
           android:layout_marginStart="5dp"
           android:contentDescription="@string/todo">
       </ImageView>
   </androidx.cardview.widget.CardView>







    <!--















    -->





</RelativeLayout>